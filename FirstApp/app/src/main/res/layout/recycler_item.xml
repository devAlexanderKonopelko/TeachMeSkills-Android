<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_item_shape"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/snackImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"/>
    
    <TextView
        android:id="@+id/snackName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/snackImage"
        android:layout_alignTop="@+id/snackImage"/>

    <TextView
        android:id="@+id/snackDescription"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/snackImage"
        android:layout_alignBottom="@+id/snackImage"/>

    <TextView
        android:id="@+id/snackPrice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/snackDescription"
        android:layout_alignTop="@+id/snackName"/>

</RelativeLayout>